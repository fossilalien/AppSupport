<p id="notice"><%= notice %></p>

<h1>Listing Resources</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Suffer</th>
      <th>Resource type</th>
      <th>Resource url</th>
      <th>Resource size</th>
      <th>Resource category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.user_id %></td>
        <td><%= resource.suffer_id %></td>
        <td><%= resource.resource_type %></td>
        <td><%= resource.resource_url %></td>
        <td><%= resource.resource_size %></td>
        <td><%= resource.resource_category %></td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

